<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="25dp"
    android:paddingTop="10dp"
    android:background="@color/blue"
    android:layout_height="130dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/headerProfileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="janedoe"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/headerProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/headerProfileImage" />

    <TextView
        android:id="@+id/headerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="janedoe@gmail.com"
        android:textColor="@color/gray_300"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/headerUsername"
        app:layout_constraintTop_toBottomOf="@+id/headerUsername" />

</androidx.constraintlayout.widget.ConstraintLayout>